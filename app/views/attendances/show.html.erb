<p style="color: green"><%= notice %></p>

<%= render @attendance %>

<div>
  <%= link_to "Edit this attendance", edit_attendance_path(@attendance) %> |
  <%= link_to "Back to attendances", attendances_path %>
</div>

<div>
  <%= button_to "Destroy this attendance", @attendance, method: :delete, form_class: "destroy-attendance-form", style: "display: none;" %>
  <button class="link-like-button" onclick="confirmAttendanceDelete('<%= escape_javascript(@attendance.email) %>', '<%= escape_javascript(@attendance.event_name) %>')">Destroy this attendance</button>
</div>

<!-- Confirmation Popup -->
<div id="deleteConfirmationPopup" class="delete-confirmation-popup" style="display: none;">
  <p id="deleteConfirmationMessage">Are you sure you want to delete <span id="email"></span>'s attendance for <span id="eventName"></span>?</p>
  <button id="confirmDeleteBtn" class="confirm-delete-btn">Delete</button>
  <button onclick="cancelDelete()" class="cancel-delete-btn">Cancel</button>
</div>

<script>
function confirmAttendanceDelete(email, eventName) {
  document.getElementById('email').textContent = email;
  document.getElementById('eventName').textContent = eventName;
  document.getElementById('deleteConfirmationPopup').style.display = 'block';
}

document.addEventListener("DOMContentLoaded", function() {
  var confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
  var destroyForm = document.querySelector('.destroy-attendance-form');

  confirmDeleteBtn.addEventListener('click', function() {
    destroyForm.submit();
  });
});

function cancelDelete() {
  document.getElementById('deleteConfirmationPopup').style.display = 'none';
}
</script>

<style>
  .link-like-button {
    background: none !important;
    border: none;
    padding: 0 !important;
    font-family: arial, sans-serif;
    color: #069;
    text-decoration: underline;
    cursor: pointer;
  }

  .link-like-button:hover {
    color: #00C;
    text-decoration: underline;
  }

  .delete-confirmation-popup {
  display: none;
  position: fixed;
  bottom: 20px;
  right: 20px;
  background-color: #fff;
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
  border: 1px solid black; /* This adds the black border */
  z-index: 1000;
  }


  .confirm-delete-btn, .cancel-delete-btn {
    margin-right: 5px;
    border: none;
    padding: 5px 10px;
    border-radius: 3px;
    cursor: pointer;
    font-size: 0.9rem;
  }

  .confirm-delete-btn {
    background-color: #d9534f; /* Red */
    color: white;
  }

  .cancel-delete-btn {
    background-color: #f0ad4e; /* Yellow */
    color: white;
  }
</style>
