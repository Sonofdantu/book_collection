<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Event Details</title>
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f4f4f4;
      padding-top: 50px; /* Adjust for fixed navbar */
    }

    .event-details-container {
      max-width: 300px;
      margin: 50px auto;
      background-color: #fff;
      padding: 10px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h5 {
      color: #333;
    }

    p {
      color: #555;
      margin-bottom: 15px;
    }

    .actions-card {
      margin-top: 20px;
    }

    .img-fluid {
      width: 70%;
      height: auto;
      display: block;
      margin: 0 auto;
    }

    .event-image {
      text-align: center;
    }
  </style>
</head>
<body>
  <!-- Bootstrap Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="#">Event Details</a>
  </nav>

  <div class="container">
    <div class="row">

      <div class="col-md-9">
        <div class="card bg-light p-3 event-details-container">
          <%= form_with(model: event) do |form| %>
            <% if event.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
                <ul>
                  <% event.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div>
              <%= form.label :title, style: "display: block" %>
              <%= form.text_field :title %>
            </div>

            <div>
              <%= form.label :score, style: "display: block" %>
              <%= form.number_field :score %>
            </div>

            <div>
              <%= form.label :password, style: "display: block" %>
              <%= form.text_field :password %>
            </div>

            <div>
              <%= form.label :start_time, style: "display: block" %>
              <%= form.datetime_field :start_time %>
            </div>

            <div>
              <%= form.label :end_time, style: "display: block" %>
              <%= form.datetime_field :end_time %>
            </div>

            <div>
              <%= form.label :attendanceVisible, "Attendance Visible?", style: "display: block" %>
              <%= form.check_box :attendanceVisible %>
            </div>

            <div>
              <%= form.label :image, style: "display: block" %>
              <% if event.image.present? %>
                <%= image_tag "data:image/png;base64,#{event.image}", alt: 'Image' %>
              <% end %>
              <br>
              <%= form.file_field :image %>
            </div>

            <div>
              <%= form.submit %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-4">
        <div class="card p-3 actions-card">
          <h5 class="card-title">Actions</h5>
          <%= button_to "Destroy this event", event, method: :delete, class: "btn btn-danger btn-block" %>
          <%= link_to "Back to Dashboard", events_path, class: "btn btn-secondary btn-block mt-2" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Include Bootstrap JS files -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
