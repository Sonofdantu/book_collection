      </li>
      <li class="nav-item">
        <%= link_to 'Officer Entries', officer_entries_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Finances', finances_path, class: 'nav-link' %>
      </li>
    </ul>
  </div>
</nav>
<h2>Officer Dashboard</h2>
    <% else %>
      <div class="admin-info">
