    left: 00px;
    bottom: 0px;
}
.triangle2 {
    width: 0px;
    height: 1000px;
    border-left: 1000px solid transparent; 
    border-right: 0px solid transparent; 
    border-bottom: 700px solid maroon; 
    position: absolute;
    right: 00px;
    bottom: 0px;
}

 .links {
    height: 20px;
    width: 300px;
    position: absolute;
    top: 380px;
    left: 800px;
    outline-style: solid;
    font-family: Arial, sans-serif;
    text-align: center;
 }
