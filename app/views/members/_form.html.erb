<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :full_name, "Full Name", style: "display: block" %>
    <%= form.text_field :full_name %>
  </div>

  <div>
    <%= form.label :email, "Email", style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :phone_number, "Phone Number", style: "display: block" %>
    <%= form.text_field :phone_number %>
  </div>

  <div>
    <%= form.label :position, "Position", style: "display: block" %>
    <%= form.text_field :position %>
  </div>

  <div>
    <%= form.label :totalPoints, "Total Points", style: "display: block" %>
    <%= form.number_field :totalPoints %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
