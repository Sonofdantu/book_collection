<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
        <% member.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :nameFirst, "First Name", style: "display: block" %>
    <%= form.text_field :nameFirst %>
  </div>

  <div>
    <%= form.label :nameLast, "Last Name", style: "display: block" %>
    <%= form.text_field :nameLast %>
  </div>

  <div>
    <%= form.label :weeklyPoints, "Weekly Points", style: "display: block" %>
    <%= form.number_field :weeklyPoints %>
  </div>

  <div>
    <%= form.label :totalPoints, "Total Points", style: "display: block" %>
    <%= form.number_field :totalPoints %>
  </div>

  <div>
    <%= form.label :position, "Position", style: "display: block" %>
    <%= form.text_field :position %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
